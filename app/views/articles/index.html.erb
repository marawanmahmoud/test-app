<h1 align="center">Listing Articles</h1>

<table class="table table-hover">
  <thead>
    <tr class="info">
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td> <%= article.title %> </td>
        <td> <%= article.description %> </td>
        <td> <%= link_to "Show", article, id: "footer" %> </td>  
        <td> <%= link_to "Edit", edit_article_path(article), id: "footer" %> </td>  
        <td class="danger"> <%= link_to "Destroy", article, method: :delete, data: { confirm: 'Are you sure?' }, id: "footer" %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, id: "footer" %>
